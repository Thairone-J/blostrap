<article class="blog-post">
        <h2 class="display-5 link-body-emphasis mb-1"> <%= article.title %> </h2>
        <p class="blog-post-meta"> <%= date_formater(article.created_at) %> by <a href="#">Thairone</a></p>

       <p> <%= truncate(article.body, length: 50) %> </p>

       <p> <%= link_to 'Continue reading...', article, class:"btn btn-link" %> </p>

       <%= link_to 'Edit', edit_article_path(article), class: "btn btn-secondary"%>
       <%= link_to 'Delete', article_path(article),
       method: :delete,
       date: { confirm: "Are you sure" }, class: "btn btn-danger"%>
      </article>
